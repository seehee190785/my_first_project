import streamlit as st

# 페이지 설정
st.set_page_config(page_title="MBTI 음식 추천 🍽️")

# 제목 및 설명
st.title("🍽️ MBTI 음식 추천기")
st.markdown("당신의 MBTI 성향에 맞는 음식 하나를 추천해드릴게요!")

# MBTI 리스트
mbti_types = [
    "ISTJ", "ISFJ", "INFJ", "INTJ",
    "ISTP", "ISFP", "INFP", "INTP",
    "ESTP", "ESFP", "ENFP", "ENTP",
    "ESTJ", "ESFJ", "ENFJ", "ENTJ"
]

# MBTI별 음식 추천 데이터
food_recommendations = {
    "ISTJ": ("함박스테이크 🍖", "전통적이고 신뢰감 있는 당신에게는, 든든하고 정갈한 한 접시가 딱이에요."),
    "ISFJ": ("된장찌개 🍲", "가족을 챙기고 따뜻한 분위기를 좋아하는 당신에게는 집밥 같은 음식이 최고의 위로예요."),
    "INFJ": ("비건 샐러드 🥗", "깊이 있는 사색을 즐기는 당신에겐, 몸과 마음을 맑게 해주는 자연친화적인 음식이 어울려요."),
    "INTJ": ("트러플 파스타 🍝", "고급스러우면서도 효율적인 걸 추구하는 당신에겐 감각적인 맛의 파스타가 딱이에요."),
    "ISTP": ("타코 🌮", "즉흥적이고 자유로운 당신에겐, 한 손에 쏙 들어오는 빠르고 재미있는 음식이 제격이에요."),
    "ISFP": ("마카롱 🍬", "섬세하고 감성적인 당신에게는 한 입에 감동이 담긴 알록달록한 디저트가 잘 어울려요."),
    "INFP": ("라벤더 허브티 ☕", "낭만과 상상을 사랑하는 당신에게는 향기로운 차 한 잔이 감정을 채워줄 거예요."),
    "INTP": ("라멘 🍜", "혼자만의 시간을 즐기며 생각이 깊은 당신에겐 국물 속에 깊이가 담긴 라멘이 어울려요."),
    "ESTP": ("버팔로윙 🍗", "즉흥적이고 에너지 넘치는 당신에겐 손으로 들고 씹는 짜릿한 맛이 필요하죠!"),
    "ESFP": ("스트로베리 케이크 🍓", "파티와 사랑을 즐기는 당신에게는 시선을 사로잡는 달콤한 디저트가 잘 어울려요."),
    "ENFP": ("부리또 🌯", "새로운 것을 시도하는 걸 좋아하는 당신에겐 다채로운 재료가 가득한 부리또가 제격이에요."),
    "ENTP": ("타파스 🍢", "이것저것 시도하는 걸 좋아하는 당신에겐 다양한 한 입 요리가 최고의 즐거움이에요."),
    "ESTJ": ("불고기 정식 🥩", "계획적이고 성실한 당신에게는 균형 잡힌 전통 한 끼가 만족감을 줘요."),
    "ESFJ": ("팬케이크 🥞", "따뜻하고 친절한 당신에게는 부드럽고 달콤한 아침 식사가 잘 어울려요."),
    "ENFJ": ("파에야 🥘", "다양한 사람과의 조화를 중요시하는 당신에겐 모두가 함께 나눌 수 있는 음식이 좋아요."),
    "ENTJ": ("스테이크 🥩", "야망 있고 결단력 있는 당신에겐 한 점으로 강한 인상을 남기는 강렬한 음식이 필요해요."),
}

# 사용자 입력
selected_mbti = st.selectbox("당신의 MBTI는 무엇인가요?", mbti_types)

# 결과 출력
if selected_mbti:
    food, reason = food_recommendations[selected_mbti]
    st.subheader(f"🍱 추천 음식: {food}")
    st.markdown(f"_{reason}_")
